{
  "compilerOptions": {
    "resolveJsonModule": true,
    "strictPropertyInitialization": true,
    "outDir": "dist",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@demo/interfaces": ["game/interfaces/index.ts"],
      "@demo/enums": ["game/enums/index.ts"],
      "@demo/tuples": ["game/tuples/index.ts"],
      "@demo/services": ["services/index.ts"]
    },
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true
  },
}
